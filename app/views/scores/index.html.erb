<h1>Leaderboard</h1>
<table class="table table-hover">
	<tr>
		<th>Rank</th>
		<th>Username</th>
		<th>Score</th>
	</tr>
	<% @score = Score.all %>
	<% rank = 1 %>
	<% sorted = @score.sort_by{|u| u.scoreamount}.reverse %>
	<% if logged_in? %>
	<% currentscore = Score.find_by(username: current_user.username) %>
	<% if !currentscore.nil? %>
	<tr id='personal-best'>
		<td><%= sorted.index(currentscore) + 1 %></td>
		<td><%= currentscore.username %></td>
		<td><%= currentscore.scoreamount %></td>
	</tr>
	<% end %>
	<% end %>
	<% sorted.first(20).each do |k| %>
		<tr>
			<td><%= sorted.index(k) + 1 %></td>
			<td> <%= k.username %> </td>
			<td> <%= k.scoreamount %> </td>
		</tr>
		<% end %>
	</table>
